{
  "compilerOptions": {
    "outDir": "./lib",
    "importHelpers": true,
    "target": "es5",
    "module": "esNext",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "baseUrl": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "images/*": [
        "src/assets/images/*"
      ],
      "src/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "ts-transformer-imports"
      }
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    ".vscode"
  ]
}